# Clerk Authentication
# Get these from https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_SECRET_KEY

# Optional: Customize sign-in/sign-up URLs (defaults work fine)
# NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
# NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Optional: Redirect after authentication
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/meetings
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/meetings

# Clerk Webhook Secret (for user sync endpoint)
CLERK_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# Vexa.ai API Backend
NEXT_PUBLIC_VEXA_API_URL=https://voice.axiomic.com.cy
NEXT_PUBLIC_VEXA_WS_URL=wss://voice.axiomic.com.cy/ws

# Admin API Token (for webhook user sync)
VEXA_ADMIN_API_TOKEN=YOUR_ADMIN_API_TOKEN

# Application
NEXT_PUBLIC_APP_URL=https://voice.axiomic.com.cy
NODE_ENV=production
